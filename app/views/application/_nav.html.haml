
%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#main-navbar")
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.navbar-brand(href="/") My Games
    #main-navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to 'Current Round', '/rounds/current'
        %li
          = link_to 'All Rounds', rounds_path
        %li
          = link_to 'FAQ', '/faq'
        - if current_user.try(:admin)
          %li
            = link_to 'Players', '/players'

      - if current_user
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              %span.caret
              #{current_user.display_name}
            %ul.dropdown-menu(role="menu")
              %li
                %a(href="/profile/edit") Edit Profile

              %li.divider

              %li
                %a(href="/logout") Logout


