- participants ||= tier.participants

%tr{class: tier.name.downcase.underscore}
  %th(colspan=3) Tier: #{tier.name}

- tier.participants.sort_by(&:score).reverse.each.with_index do |participant, index|
  %tr
    %td= link_to "#{index + 1}. #{participant.player.name}", [@round, participant]
    %td= participant.score
    %td #{participant.games.finished.count} of #{participant.games.count} games played
